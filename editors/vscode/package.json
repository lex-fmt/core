{
  "name": "lex-vscode",
  "displayName": "Lex",
  "description": "Language support for Lex documents via lex-lsp.",
  "version": "0.1.0",
  "publisher": "lex",
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "./out/src/main.js",
  "engines": {
    "vscode": "^1.106.0",
    "node": ">=20"
  },
  "activationEvents": [
    "onLanguage:lex"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lex",
        "aliases": [
          "Lex"
        ],
        "extensions": [
          ".lex"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "themes": [
      {
        "label": "Lex Light",
        "uiTheme": "vs",
        "path": "./themes/lex-light.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "SessionTitle",
        "description": "Session title/heading"
      },
      {
        "id": "SessionMarker",
        "description": "Session marker"
      },
      {
        "id": "SessionTitleText",
        "description": "Session title text"
      },
      {
        "id": "DefinitionSubject",
        "description": "Definition subject/term"
      },
      {
        "id": "DefinitionContent",
        "description": "Definition content"
      },
      {
        "id": "ListMarker",
        "description": "List item marker"
      },
      {
        "id": "ListItemText",
        "description": "List item text"
      },
      {
        "id": "AnnotationLabel",
        "description": "Annotation label"
      },
      {
        "id": "AnnotationParameter",
        "description": "Annotation parameter"
      },
      {
        "id": "AnnotationContent",
        "description": "Annotation content"
      },
      {
        "id": "InlineStrong",
        "description": "Strong/bold text"
      },
      {
        "id": "InlineEmphasis",
        "description": "Emphasized/italic text"
      },
      {
        "id": "InlineCode",
        "description": "Inline code"
      },
      {
        "id": "InlineMath",
        "description": "Inline math"
      },
      {
        "id": "Reference",
        "description": "Reference"
      },
      {
        "id": "ReferenceCitation",
        "description": "Citation reference"
      },
      {
        "id": "ReferenceFootnote",
        "description": "Footnote reference"
      },
      {
        "id": "VerbatimSubject",
        "description": "Verbatim block subject"
      },
      {
        "id": "VerbatimLanguage",
        "description": "Verbatim language identifier"
      },
      {
        "id": "VerbatimAttribute",
        "description": "Verbatim attribute"
      },
      {
        "id": "VerbatimContent",
        "description": "Verbatim content"
      },
      {
        "id": "InlineMarker.strong.start",
        "description": "Strong/bold opening marker"
      },
      {
        "id": "InlineMarker.strong.end",
        "description": "Strong/bold closing marker"
      },
      {
        "id": "InlineMarker.emphasis.start",
        "description": "Emphasis/italic opening marker"
      },
      {
        "id": "InlineMarker.emphasis.end",
        "description": "Emphasis/italic closing marker"
      },
      {
        "id": "InlineMarker.code.start",
        "description": "Inline code opening marker"
      },
      {
        "id": "InlineMarker.code.end",
        "description": "Inline code closing marker"
      },
      {
        "id": "InlineMarker.math.start",
        "description": "Inline math opening marker"
      },
      {
        "id": "InlineMarker.math.end",
        "description": "Inline math closing marker"
      },
      {
        "id": "InlineMarker.ref.start",
        "description": "Reference opening bracket"
      },
      {
        "id": "InlineMarker.ref.end",
        "description": "Reference closing bracket"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "lex",
        "scopes": {
          "SessionTitle": ["markup.heading"],
          "SessionMarker": ["punctuation.definition.heading"],
          "SessionTitleText": ["markup.heading"],
          "DefinitionSubject": ["variable.other.definition"],
          "DefinitionContent": ["text"],
          "ListMarker": ["punctuation.definition.list"],
          "ListItemText": ["markup.list"],
          "AnnotationLabel": ["comment.block"],
          "AnnotationParameter": ["variable.parameter"],
          "AnnotationContent": ["comment.block"],
          "InlineStrong": ["markup.bold"],
          "InlineEmphasis": ["markup.italic"],
          "InlineCode": ["markup.inline.raw"],
          "InlineMath": ["constant.numeric"],
          "Reference": ["markup.underline.link"],
          "ReferenceCitation": ["markup.underline.link"],
          "ReferenceFootnote": ["markup.underline.link"],
          "VerbatimSubject": ["entity.name.section"],
          "VerbatimLanguage": ["entity.name.tag"],
          "VerbatimAttribute": ["variable.parameter"],
          "VerbatimContent": ["markup.raw.block"],
          "InlineMarker.strong.start": ["punctuation.definition.inline"],
          "InlineMarker.strong.end": ["punctuation.definition.inline"],
          "InlineMarker.emphasis.start": ["punctuation.definition.inline"],
          "InlineMarker.emphasis.end": ["punctuation.definition.inline"],
          "InlineMarker.code.start": ["punctuation.definition.inline"],
          "InlineMarker.code.end": ["punctuation.definition.inline"],
          "InlineMarker.math.start": ["punctuation.definition.inline"],
          "InlineMarker.math.end": ["punctuation.definition.inline"],
          "InlineMarker.ref.start": ["punctuation.definition.inline"],
          "InlineMarker.ref.end": ["punctuation.definition.inline"]
        }
      }
    ],
    "configuration": {
      "title": "Lex",
      "properties": {
        "lex.lspBinaryPath": {
          "type": "string",
          "markdownDescription": "Absolute or workspace-relative path to the lex-lsp binary.",
          "default": "./resources/lex-lsp"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -watch -p .",
    "bundle": "esbuild src/main.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node20",
    "vscode:prepublish": "npm run bundle -- --minify",
    "pretest": "npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node ./out/test/unit/index.js",
    "test:integration": "node ./out/test/runTests.js",
    "lint": "eslint src test",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "build:with-binary": "bash ./scripts/build_extension.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lex-lang/lex.git"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.25",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.39.1",
    "globals": "^15.15.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
