/* Lex HTML Export - Modern Theme
 * Monochrome design matching VSCode Lex editor theme
 * Uses typography (bold, italic, underline) and grayscale intensity for visual hierarchy
 * 
 * Intensity levels (from theme.ts):
 *   - normal:   #000000 - Primary content (headings, body text, inline formatting)
 *   - muted:    #808080 - Structural elements (markers, references)
 *   - faint:    #b3b3b3 - Meta-information (annotations, verbatim metadata)
 *   - faintest: #cacaca - Syntax markers
 */

@import url('https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,400;0,600;0,700;1,400;1,600&family=JetBrains+Mono:wght@400;500&display=swap');

/* === Color Variables === */
:root {
  --lex-normal: #000000;
  --lex-muted: #808080;
  --lex-faint: #b3b3b3;
  --lex-faintest: #cacaca;
  --lex-bg: #ffffff;
  --lex-code-bg: #f5f5f5;
}

/* === Typography === */
body {
  font-family: 'Helvetica Neue', Helvetica, 'Source Sans 3', Arial, sans-serif;
  color: var(--lex-normal);
  background: var(--lex-bg);
  font-size: 15px;
  line-height: 1.25;
}

/* === Document Container === */
.lex-document {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 1.5rem;
}

/* === Sessions (Sections) === */
section.lex-session {
  margin: 1.5rem 0;
}

section.lex-session:first-child {
  margin-top: 0;
}

.lex-document > section.lex-session {
  margin: 2rem 0;
}

.lex-document > section.lex-session:first-child {
  margin-top: 0;
}

/* === Content Containers (AST container visual indentation) === */
.lex-content {
  padding-left: 25px;
}

/* Top-level session content has no indentation */
.lex-document > section.lex-session > .lex-content {
  padding-left: 0;
}

/* === Headings with Scaled Sizes ===
 * Level 1: 1.3x regular size
 * Level 5: 1x regular size
 * Smooth interpolation between levels (0.075 step)
 */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Helvetica Neue', Helvetica, 'Source Sans 3', Arial, sans-serif;
  font-weight: 700;
  color: var(--lex-normal);
  line-height: 1.25;
  margin: 1.25rem 0 0.75rem;
}

/* Title sizing: 1.3x at level 1, decreasing to 1x at level 5 */
h1 {
  font-size: 1.3em;    /* 1.3x - Level 1 */
  margin-top: 0;
  margin-bottom: 1rem;
}

h2 {
  font-size: 1.225em;  /* 1.225x - Level 2 */
  margin-top: 1.5rem;
}

h3 {
  font-size: 1.15em;   /* 1.15x - Level 3 */
  margin-top: 1.25rem;
}

h4 {
  font-size: 1.075em;  /* 1.075x - Level 4 */
  margin-top: 1rem;
}

h5 {
  font-size: 1em;      /* 1x - Level 5 */
  margin-top: 1rem;
}

h6 {
  font-size: 1em;      /* 1x - Level 6 (same as 5) */
  margin-top: 1rem;
  font-weight: 600;
}

/* First heading in a session has no top margin */
section.lex-session > h1:first-child,
section.lex-session > h2:first-child,
section.lex-session > h3:first-child,
section.lex-session > h4:first-child,
section.lex-session > h5:first-child,
